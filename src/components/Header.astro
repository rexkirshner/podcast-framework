---

<header class="bg-white border-b border-gray-200">
  <div class="max-w-6xl mx-auto px-4 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <div>
        <a href="/" class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">SW</span>
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-900">Strange Water</h1>
            <p class="text-xs text-gray-500">Exploring Ethereum and Web3</p>
          </div>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex gap-6">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition">
          Home
        </a>
        <a href="/episodes" class="text-gray-700 hover:text-blue-600 transition">
          Episodes
        </a>
        <a href="/about" class="text-gray-700 hover:text-blue-600 transition">
          About
        </a>
      </nav>

      <!-- Mobile Menu Button (placeholder) -->
      <button class="md:hidden p-2 text-gray-700 hover:text-blue-600">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</header>
