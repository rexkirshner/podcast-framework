---
// Base layout with common meta tags
// Fetches podcast info and theme ONCE per page, passes to child components via props
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getPodcastInfo } from "../lib/sanity";
import { getTheme, defaultTheme, generateThemeCSS, getGoogleFontsURL } from "../lib/theme";
import type { Podcast } from "../lib/sanity";
import type { Theme } from "../lib/theme";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  // Optional: Allow pages to pass pre-fetched data to avoid re-fetching
  podcastInfo?: Podcast | null;
  theme?: Theme;
}

const { title, description, ogImage = "/og-image.jpg", podcastInfo: propPodcastInfo, theme: propTheme } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Fetch podcast info and theme ONCE (or use props if provided)
// This prevents N+1 queries - each component will receive data via props
const podcastInfo = propPodcastInfo !== undefined ? propPodcastInfo : await getPodcastInfo();
const theme = propTheme || (await getTheme()) || defaultTheme;

const faviconUrl = podcastInfo?.favicon?.url || "/favicon.svg";
const themeCSS = generateThemeCSS(theme);
const googleFontsUrl = getGoogleFontsURL(theme.typography.googleFonts || []);

// Log warnings during development if CMS data is missing
if (!podcastInfo && import.meta.env.MODE === 'development') {
  console.warn('[BaseLayout] Podcast info not found - using fallback favicon');
}
if (!propTheme && !await getTheme() && import.meta.env.MODE === 'development') {
  console.warn('[BaseLayout] Theme not found - using default theme');
}

// Google Analytics 4 - Only load in production
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    {googleFontsUrl && <link rel="preconnect" href="https://fonts.googleapis.com" />}
    {googleFontsUrl && <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />}
    {googleFontsUrl && <link href={googleFontsUrl} rel="stylesheet" />}

    <!-- Theme CSS Variables -->
    <style is:inline set:html={themeCSS}></style>

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Google Analytics 4 -->
    {GA_MEASUREMENT_ID && <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>}
    {GA_MEASUREMENT_ID && <script is:inline define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID);
    </script>}
  </head>
  <body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">
    <Header podcastInfo={podcastInfo} theme={theme} />
    <slot />
    <Footer podcastInfo={podcastInfo} theme={theme} />
  </body>
</html>
